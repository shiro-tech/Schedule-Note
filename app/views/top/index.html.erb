<div class="top-wrapper text-center">
  <div class="conteriner top-container">
    <% if logged_in? %>
      <div class="login_top">
        <h1 class="top-user-name"><%= current_user.name + "さん"%></h1>
        <h2 class="">ログイン後</h2>
      </div>
    <% else %>

      <h1 class="top-text">Schedule-Note</h1>
      <h2 class="top-text">Login?/Sign in</h2>

      <div class="row">
        <div class="col-offset-3 col-md-3">
          <%= link_to 'Sign up', users_new_path , class: 'btn btn-block' %>
        </div>

        <div class="col-md-3">
          <%= link_to 'Log in', sessions_new_path, class:'btn btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
